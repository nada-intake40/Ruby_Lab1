
<h1>Listing Articles</h1>
 <%= link_to 'New article', new_article_path ,  class: "btn btn-success btn-sm round" %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Actions </th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show' , article_path(article) , class: "btn btn-info btn-sm round" %></td>
      <% if can? :update , article  %>%
          <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary btn-sm round" %></td>
      <% end %>  
       <% if can? :destroy , article %>  
          <td><%= link_to 'Destroy', article_path(article), class: "btn btn-danger btn-sm round" ,
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
     <% end %>    
    </tr>
  <% end %>
</table>